{
  "name": "webnify-bot",
  "description": "Telegram bot for Web-Nify payment services",
  "website": "https://webnify.example.com",
  "repository": "https://github.com/yourusername/webnify-bot",
  "logo": "https://webnify.example.com/logo.png",
  "success_url": "/",
  "scripts": {
    "postdeploy": "python database.py"
  },
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Owner Telegram ID",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "S"
    }
  },
  "addons": [
    "postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
